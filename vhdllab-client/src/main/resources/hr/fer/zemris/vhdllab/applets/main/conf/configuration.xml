<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<editors>

		<!-- VHDL EDITORS -->

		<editor id="editor.vhdl.source">
			<class>
				hr.fer.zemris.vhdllab.applets.texteditor.TextEditor
			</class>
			<fileType>vhdl.source</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave value="false"/>
			<singleton>false</singleton>
		</editor>

		<editor id="editor.simulation">
			<class>
				hr.fer.zemris.vhdllab.applets.simulations.WaveApplet
			</class>
			<fileType>vhdl.simulation</fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave value="true">
				<class>
					hr.fer.zemris.vhdllab.applets.simulations.ExplicitSaveSimulation
				</class>
			</explicitSave>
			<singleton>false</singleton>
		</editor>

		<editor id="editor.automat">
			<class>
				hr.fer.zemris.vhdllab.applets.editor.automat.Automat
			</class>
			<fileType>vhdl.automaton</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave value="false"/>
			<singleton>false</singleton>
		</editor>

		<editor id="editor.testbench">
			<class>
				hr.fer.zemris.vhdllab.applets.editor.newtb.TestbenchEditor
			</class>
			<fileType>vhdl.testbench</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave value="false"/>
			<singleton>false</singleton>
		</editor>

		<editor id="editor.schema">
			<class>
				hr.fer.zemris.vhdllab.applets.schema2.gui.SchemaMainPanel
			</class>
			<fileType>vhdl.schema</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave value="false"/>
			<singleton>false</singleton>
		</editor>

		<!-- SPECIAL PURPOSE EDITORS -->

		<editor id="editor.predefined">
			<class>
				hr.fer.zemris.vhdllab.applets.texteditor.TextEditor
			</class>
			<fileType>vhdl.predefined</fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave value="false"/>
			<singleton>false</singleton>
		</editor>

		<editor id="editor.view.vhdl">
			<class>
				hr.fer.zemris.vhdllab.applets.texteditor.TextEditor
			</class>
			<fileType></fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave value="false"/>
			<singleton>false</singleton>
		</editor>

		<editor id="editor.preferences">
			<class>
				hr.fer.zemris.vhdllab.applets.editor.preferences.PreferencesEditor
			</class>
			<fileType>preferences.user</fileType>
			<savable>false</savable>
			<readonly>false</readonly>
			<explicitSave value="false"/>
			<singleton>true</singleton>
		</editor>
	</editors>

	<views>
		<view id="view.status.history">
			<class>
				hr.fer.zemris.vhdllab.applets.view.status.history.StatusHistoryView
			</class>
			<singleton>true</singleton>
		</view>

		<view id="view.error.history">
			<class>
				hr.fer.zemris.vhdllab.applets.view.error.history.ErrorHistoryView
			</class>
			<singleton>true</singleton>
		</view>

		<view id="view.compilation.errors">
			<class>
				hr.fer.zemris.vhdllab.applets.view.compilation.CompileErrorsPanel
			</class>
			<singleton>true</singleton>
		</view>

		<view id="view.simulation.errors">
			<class>
				hr.fer.zemris.vhdllab.applets.view.simulation.SimulateErrorsPanel
			</class>
			<singleton>true</singleton>
		</view>

		<view id="view.project.explorer">
			<class>
				hr.fer.zemris.vhdllab.applets.main.component.projectexplorer.DefaultProjectExplorer
			</class>
			<singleton>true</singleton>
		</view>
	</views>
</configuration>
