<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!--
    Bean: windowCommandManager Type: magic Usage: required Description:
    This specifies the component that will manage the commands
    associated with a window. You can specify the ids of commands that
    are "shared" among views. This indicates to the manager that they
    will have different target executors in each view.
  -->
  <bean id="windowCommandManager"
    class="org.springframework.richclient.application.support.ApplicationWindowCommandManager" />

  <bean id="menuBar"
    class="org.springframework.richclient.command.CommandGroupFactoryBean">
    <property name="members">
      <list>
        <ref bean="fileMenu" />
        <ref bean="editMenu" />
        <ref bean="windowMenu" />
        <ref bean="helpMenu" />
        <ref bean="developmentMenu" />
      </list>
    </property>
  </bean>

  <bean id="fileMenu"
    class="org.springframework.richclient.command.CommandGroupFactoryBean">
    <property name="members">
      <list>
        <value>newCommand</value>
        <value>separator</value>
        <value>saveCommand</value>
        <value>saveAsCommand</value>
        <value>separator</value>
        <value>printCommand</value>
        <value>separator</value>
        <value>propertiesCommand</value>
        <value>separator</value>
        <bean
          class="org.springframework.richclient.command.support.ExitCommand" />
      </list>
    </property>
  </bean>

  <!--
    Bean: editMenu Type: user named Usage: optional Description: This
    specifies the content of the "Edit" menu.
  -->
  <bean id="editMenu"
    class="org.springframework.richclient.command.CommandGroupFactoryBean">
    <property name="members">
      <list>
        <value>undoCommand</value>
        <value>redoCommand</value>
        <value>separator</value>
        <value>cutCommand</value>
        <value>copyCommand</value>
        <value>pasteCommand</value>
        <value>deleteCommand</value>
        <value>separator</value>
        <value>selectAllCommand</value>
      </list>
    </property>
  </bean>

  <!--
    Bean: windowMenu Type: user named Usage: optional Description: This
    specifies the content of the "Window" menu.
  -->
  <bean id="windowMenu"
    class="org.springframework.richclient.command.CommandGroupFactoryBean">
    <property name="members">
      <list>
        <bean
          class="org.springframework.richclient.command.support.NewWindowCommand" />
        <value>separator</value>
        <bean
          class="org.springframework.richclient.command.support.ShowViewMenu" />
      </list>
    </property>
  </bean>

  <!--
    Bean: helpMenu Type: user named Usage: optional Description: This
    specifies the content of the "Help" menu.
  -->
  <bean id="helpMenu"
    class="org.springframework.richclient.command.CommandGroupFactoryBean">
    <property name="members">
      <list>
        <value>helpContentsCommand</value>
        <value>separator</value>
        <ref bean="aboutCommand" />
      </list>
    </property>
  </bean>

  <bean id="developmentMenu"
    class="org.springframework.richclient.command.CommandGroupFactoryBean">
    <property name="members">
      <list>
        <ref bean="createErrorCommand" />
      </list>
    </property>
  </bean>

  <bean id="createErrorCommand" class="hr.fer.zemris.vhdllab.platform.CreateErrorCommand" />


  <!--
    Bean: aboutCommand Type: user named Usage: optional Description:
    This creates a command to handle the "about" menu item. It uses a
    platform class to generate an about box from the configured
    application data in the application context.
  -->
  <bean id="aboutCommand"
    class="org.springframework.richclient.command.support.AboutCommand" />

  <bean id="loginCommand" class="hr.fer.zemris.vhdllab.platform.remoting.LoginCommand" />

</beans>