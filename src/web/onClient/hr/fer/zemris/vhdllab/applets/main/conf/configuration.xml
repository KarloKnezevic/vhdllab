<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<editors>

		<!-- VHDL EDITORS -->

		<editor id="editor.vhdl.source">
			<class>
				hr.fer.zemris.vhdllab.applets.texteditor.TextEditor
			</class>
			<fileType>vhdl_source</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave>false</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<editor id="editor.simulation">
			<class>
				hr.fer.zemris.vhdllab.applets.simulations.WaveApplet
			</class>
			<fileType>vhdl_simulation</fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave>true</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<editor id="editor.automat">
			<class>
				hr.fer.zemris.vhdllab.applets.editor.automat.Automat
			</class>
			<fileType>vhdl_automat</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave>false</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<editor id="editor.testbench">
			<class>
				hr.fer.zemris.vhdllab.applets.editor.tb.drawer.Aplet
			</class>
			<!-- a new testbench class -->
			<!--
				<class>hr.fer.zemris.vhdllab.applets.editor.tb3.TestbenchEditor</class>
			-->
			<fileType>vhdl_tb</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave>false</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<editor id="editor.schema">
			<class>
				hr.fer.zemris.vhdllab.applets.schema2.gui.SchemaMainPanel
			</class>
			<fileType>vhdl_struct_schema</fileType>
			<savable>true</savable>
			<readonly>false</readonly>
			<explicitSave>false</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<!-- SPECIAL PURPOSE EDITORS -->

		<editor id="editor.predefined">
			<class>
				hr.fer.zemris.vhdllab.applets.texteditor.TextEditor
			</class>
			<fileType>predefined</fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave>false</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<editor id="editor.view.vhdl">
			<class>
				hr.fer.zemris.vhdllab.applets.texteditor.TextEditor
			</class>
			<fileType></fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave>false</explicitSave>
			<singleton>false</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.BasicFileEditorResolver
			</idResolver>
		</editor>

		<editor id="editor.preferences">
			<class>
				hr.fer.zemris.vhdllab.applets.editor.preferences.PreferencesEditor
			</class>
			<fileType>preferences</fileType>
			<savable>false</savable>
			<readonly>true</readonly>
			<explicitSave>false</explicitSave>
			<singleton>true</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.ReturnOriginalResolver
			</idResolver>
		</editor>
	</editors>

	<views>
		<view id="view.status.history">
			<class>
				hr.fer.zemris.vhdllab.applets.view.status.history.StatusHistoryView
			</class>
			<singleton>true</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.ReturnOriginalResolver
			</idResolver>
		</view>

		<view id="view.compilation.errors">
			<class>
				hr.fer.zemris.vhdllab.applets.view.compilation.CompileErrorsPanel
			</class>
			<singleton>true</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.ReturnOriginalResolver
			</idResolver>
		</view>

		<view id="view.simulation.errors">
			<class>
				hr.fer.zemris.vhdllab.applets.view.simulation.SimulateErrorsPanel
			</class>
			<singleton>true</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.ReturnOriginalResolver
			</idResolver>
		</view>
		
		<view id="view.project.explorer">
			<class>
				hr.fer.zemris.vhdllab.applets.main.component.projectexplorer.DefaultProjectExplorer
			</class>
			<singleton>true</singleton>
			<idResolver>
				hr.fer.zemris.vhdllab.applets.main.resolver.ReturnOriginalResolver
			</idResolver>
		</view>
	</views>
</configuration>
