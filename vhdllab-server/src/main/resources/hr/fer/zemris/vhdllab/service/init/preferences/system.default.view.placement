<?xml version="1.0" encoding="UTF-8"?>

<property id="system.default.view.placement" type="preferences.user">
	<description>Default view placement</description>
	<tooltip>The default location where views will open</tooltip>
	<editable byUser="true" />
	<data type="string" editor="list">
		<!-- These values must be all uppercase because they are liked to enum -->
		<values>
			<value>LEFT</value>
			<value>RIGHT</value>
			<value>BOTTOM</value>
			<value>CENTER</value>
		</values>
		<default>BOTTOM</default>
	</data>
</property>